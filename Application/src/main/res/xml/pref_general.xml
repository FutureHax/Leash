<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="Leash"
        android:summary="Notify when disconnected"/>
    <SwitchPreference
        android:key="enable_leash_wear"
        android:title="Enable On Wear"
        android:defaultValue="true" />
    <SwitchPreference
        android:key="enable_leash_phone"
        android:title="Enable On Phone"
        android:defaultValue="true" />

    <PreferenceCategory android:title="Find Android Wear" />

    <Preference
        android:key="find_wear"
        android:title="Find Wear"/>

    <PreferenceCategory android:title="Find Phone" />

    <Preference
        android:key="notification"
        android:title="Notification Sound"/>


</PreferenceScreen>
